<div class="iframely-link">
    <div class="iframely-container">
        <div class="panel panel-default panel-iframely">
            <div class="panel-body">
                <div class="media iframely-embed">

                    <!-- IF title -->
                    <h4 class="media-heading">
                        <a href="{url}" target="_blank" rel="nofollow" class="one-line">
                            <!-- IF icon -->
                            <img src="{icon}" class="thumb pull-left not-responsive" />
                            <!-- ENDIF icon -->
                            {title}
                        </a>
                    </h4>
                    <!-- ENDIF title -->

                    <!-- IF embed.meta.description -->
                    <p class="description">
                        {embed.meta.description}
                    </p>
                    <!-- ENDIF embed.meta.description -->

                </div>
            </div>
        </div>
    </div>
</div>